<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>Shared.Users.Domain</RootNamespace>

    <!-- NuGet Metadata -->
    <PackageId>Shared.Users</PackageId>
    <Version>1.0.0</Version>
    <Title>Shared Users Module</Title>
    <Description>User management module with role-based access control (RBAC), JWT authentication, and just-in-time provisioning capabilities.</Description>
    <Authors>Your Organization</Authors>
    <Company>Your Organization</Company>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/bswierzewski/shared</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>users;authentication;rbac;jwt;user-management;identity</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Shared.Abstractions\Shared.Abstractions.csproj" />
  </ItemGroup>

</Project>
